<resources>

    <style name="StatCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="StatCardBlueStyle" parent="StatCardStyle">
        <item name="android:background">@drawable/card_blue_bg</item>
    </style>

    <style name="StatLabel">
        <item name="android:textColor">#6B7280</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StatValue">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StatLabelWhite">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StatValueWhite">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ActionCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ActionTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionSub">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#6B7280</item>
    </style>

</resources>