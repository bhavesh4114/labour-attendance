<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                app:tint="#111827" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worker Payment"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Worker Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_worker"
                android:background="@drawable/bg_worker_image"
                android:padding="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:text="Rajesh Kumar"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="ID: #88291 • Mason"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:text="₹500 / Day"
                    android:textSize="15sp"
                    android:textColor="#2563EB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Earnings Summary -->
        <TextView
            android:text="EARNINGS SUMMARY"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#9CA3AF"
            android:layout_marginTop="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Summary Rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:text="Total Attendance"
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="24 Days"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:text="Gross Wage"
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="₹12,000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:text="Advance Deductions"
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="-₹2,000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#EF4444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Net Payable Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_net_amount"
            android:padding="24dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:text="NET PAYABLE AMOUNT"
                android:textSize="13sp"
                android:textColor="#2563EB"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="₹10,000"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Payment Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Mark as Paid"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button"/>

    </LinearLayout>

</ScrollView>