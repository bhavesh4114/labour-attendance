<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <!-- Scroll Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TOP BAR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"
                    app:tint="#111827" />

                <TextView
                    android:text="Settings"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- PROFILE -->
            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_circle_light"
                    android:padding="18dp"
                    android:src="@drawable/ic_profile" />

                <LinearLayout
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Rajesh Kumar"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Site Manager • ID: MH-8821"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <!-- SECURITY -->
            <TextView
                android:text="SECURITY"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#9CA3AF"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="12dp"
                android:background="@drawable/card_bg"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Change Password -->
                <include layout="@layout/item_settings_arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginVertical="14dp" />

                <!-- Biometric -->
                <include layout="@layout/item_settings_switch" />

            </LinearLayout>

            <!-- SYSTEM & DATA -->
            <TextView
                android:text="SYSTEM DATA"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#9CA3AF"
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="12dp"
                android:background="@drawable/card_bg"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/item_backup" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginVertical="14dp" />

                <include layout="@layout/item_language" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginVertical="14dp" />

                <include layout="@layout/item_notifications" />

            </LinearLayout>

            <!-- SUPPORT -->
            <TextView
                android:text="SUPPORT"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#9CA3AF"
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="12dp"
                android:background="@drawable/card_bg"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/item_help" />
            </LinearLayout>

            <!-- LOGOUT -->
            <LinearLayout
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_logout"
                android:gravity="center"
                android:padding="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Logout Account"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#DC2626"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- VERSION -->
            <TextView
                android:text="Majduri Hajri v2.4.0 (Build 102)\n© 2024 TechLabour Systems"
                android:textSize="12sp"
                android:textColor="#9CA3AF"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_calendar" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_report" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/ic_settings"
            app:tint="#2563EB" />
    </LinearLayout>

</RelativeLayout>