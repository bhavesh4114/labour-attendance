<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="@drawable/bg_circle_light"
                android:padding="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add New Worker"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_info_card"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Enter worker details below to add them to your daily attendance list."
                android:textColor="#334155"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Worker Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Worker Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111827"
            android:layout_marginTop="24dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext"
            android:hint="Enter full name"
            android:padding="15dp"
            android:drawableStart="@drawable/ic_worker"
            android:drawablePadding="10dp"
            android:textColor="#000"
            android:textColorHint="#94A3B8"/>

        <!-- Mobile Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111827"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext"
            android:hint="10-digit number"
            android:inputType="phone"
            android:padding="15dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:textColor="#000"
            android:textColorHint="#94A3B8"/>

        <!-- Daily Wage -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Wage (Hajri)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111827"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext"
            android:hint="Amount in â‚¹"
            android:inputType="number"
            android:padding="15dp"
            android:drawableStart="@drawable/ic_money"
            android:drawablePadding="10dp"
            android:textColor="#000"
            android:textColorHint="#94A3B8"/>

        <!-- Skill Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skill Type"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111827"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext"
            android:padding="10dp"/>

        <!-- Save Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="Save Worker"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button"
            android:drawableStart="@drawable/ic_add_person"
            android:drawablePadding="10dp"/>

    </LinearLayout>
</ScrollView>